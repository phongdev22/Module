@{
    var message = ViewBag?.Mess ?? TempData["Message"];
}

<!DOCTYPE html>
<html>
<head>
    <title>Trang chủ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body class="d-flex justify-content-center align-items-center">
    <div class="vh-100 col-6">
        <h2>@message</h2>
        <form method="post">
            <div class="form-group my-1">
                <label for="idenCode">Identity Code Enterprise</label>
                <input name="IdentityCode" class="form-control" />
            </div>

            <div class="form-group my-1">
                <label for="EventName">Event Name</label>
                <select name="EventName" class="form-control">
                    <option value="USER_END_CALL">USER_END_CALL</option>
                    <option value="CAN_NOT_MAKE_CALL">CAN_NOT_MAKE_CALL</option>
                    <option value="MAX_CONNECT_TIME">MAX_CONNECT_TIME</option>
                    <option value="486 Busy Here">MAX_CONNECT_TIME</option>
                </select>
            </div>

            <div class="form-group my-1">
                <label for="TemplateCode">Template Code</label>
                <input name="TemplateCode" class="form-control" />
            </div>

            <div class="form-group my-1">
                <label for="RouteRule">Route rule</label>
                <input name="RouteRule" class="form-control" />
            </div>

            <div class="form-group my-1">
                <label for="ListParams">List params</label>
                <input name="ListParams" class="form-control" /> 
            </div>

            <div class="form-group my-1">
                <label for="DefaultValue">Defualt value if params are unavailable</label>
                <input name="DefaultValue" class="form-control" />
                <span asp-validation-for="DefaultValue" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
</html>